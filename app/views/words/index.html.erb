<% provide :title, t(".all_words") %>
<section class="container-fluid">
  <h1><%= t ".all_words" %></h1>
  <div class="row">
    <div class="search-form">
      <%= form_tag words_path, method: :get, id: "search-form" do %>
        <div class="row">
          <div class="col-sm-3">
            <%= select_tag :category_id, options_for_select(@category.
              collect{|category| [category.name, category.id]},
              params[:category_id]), class: "form-control" %>
          </div>
          <div class="col-sm-3">
            <%= select_tag :status, options_for_select(
              Settings.word.filters.map{|filter| [filter.humanize, filter]},
              params[:status]), class: "form-control" %>
          </div>
          <div class="col-sm-3">
            <%= text_field_tag :search, params[:search],
              placeholder: t(".search"), class: "form-control search-field-content" %>
          </div>
          <div class="input-group-btn search-btn col-sm-3">
            <%= button_tag type: "submit", class: "btn btn-primary" do %>
              <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col-md-10 col-md-offset-1">
    <div class="table-responsive table-condensed">
      <table class="responstable" id="list_category">
        <tr>
          <th><%= t ".number" %></th>
          <th><%= t ".category" %></th>
          <th><%= t ".word_content" %></th>
        </tr>
        <tbody>
          <%= render @words %>
        </tbody>
      </table>
    </div>
  </div>
</section>
