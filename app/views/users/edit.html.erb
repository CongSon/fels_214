<% provide :title, t(".edit") %>
<section class="container-fluid">
  <h1><%= t(".edit") %></h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@user, html: {multipart: true}) do |f| %>
        <%= render "shared/error_messages", object: f.object %>

        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>

        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control" %>

        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control" %>

        <%= f.label :password_confirmation, t(".confirmation") %>
        <%= f.password_field :password_confirmation, class: "form-control" %>
        <div>
          <%= image_tag @user.avatar? ? @user.avatar.url : Settings.image,
            class: "img-responsive", id: "avatar" %>
          <span>
            <%= f.file_field :avatar, accept: "image/jpeg,image/gif,image/png",
              onchange:"loadFile(event)" %>
          </span>
        </div>
        <%= f.submit t(".save"), class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</section>

