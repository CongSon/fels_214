<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1><%= @user.name %></h1>
      <span><%= link_to t(".view_my_profile"), @user %></span>
    </section>
    <section class="stats">
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to gravatar_for(user, size: 30), user %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <h1><%=  pluralize @followers.size, t(".follower")%></h1>
  <div class="col-md-8">
    <div class="table-responsive table-condensed">
      <% if @users.any? %>
      <table class="table table-hover th_word bg-table" id="list_user">
        <thead class="title_table th_word">
          <tr>
            <th class="th_index"><%= t ".number" %></th>
            <th class="th_user"><%= t ".avatar" %></th>
            <th class="th_user"><%= t ".name" %></th>
            <th class="th_user"><%= t ".email" %></th>
          </tr>
        </thead>
        <tbody>
          <%= render @users %>
        </tbody>
        <%= will_paginate @users%>
      </table>
      <% end %>
    </div>
  </div>
</div>
