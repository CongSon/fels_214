<% provide :title, t(".all_words") %>
<h1 class="head"><%= t ".all_words" %></h1>
<div class="row">
  <div class="search-form">
    <%= form_tag admin_words_path, method: :get, id: "search-form" do %>
      <div class="row">
        <div class="col-sm-4">
          <%= select_tag :category_id, options_for_select(@category.
            collect{|category| [category.name, category.id]},
            params[:category_id]), class: "form-control" %>
        </div>
        <div class="col-sm-5">
          <%= text_field_tag :search, params[:search],placeholder: t(".search"),
            class: "form-control search-field-content" %>
        </div>
        <div class="input-group-btn search-btn col-sm-3">
          <%= button_tag type: "submit", class: "btn btn-primary" do %>
            <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
            <span class="label-icon"><%= t ".search" %></span>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-sm-12 pull-right">
    <div class="col-sm-10">
    </div>
    <div class="col-sm-1">
      <button type="button" class="btn btn-info" data-toggle="modal"
        data-target="#importModal"><%= t ".import" %></button>
        <div class="container">
          <div class="modal fade" id="importModal" role="dialog">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal">
                    &times;</button>
                  <h4 class="modal-title head"><%= t ".import_file" %></h4>
                </div>
                <div class="modal-body">
                  <%= form_tag admin_csv_index_path, multipart: true do %>
                    <%= file_field_tag :file %>
                    <%= submit_tag t(".submit"), class: "btn btn-primary" %>
                  <% end %>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-danger"
                    data-dismiss="modal"><%= t ".close"%></button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <div class="col-sm-1">
      <%= link_to "", new_admin_word_path,
        class: "btn btn-primary fa fa-plus" %>
    </div>
  </div>
</div>
  <div class="table-responsive table-condensed">
    <table class="responstable" id="list_category">
      <tr>
        <th><%= t ".number" %></th>
        <th><%= t ".category" %></th>
        <th><%= t ".word_content" %></th>
        <th><%= t ".info" %></th>
        <th><%= t ".edit" %></th>
        <th><%= t ".delete" %></th>
      </tr>
      <tbody>
        <%= render @words %>
      </tbody>
    </table>
    <%= will_paginate %>
  </div>
</div>
