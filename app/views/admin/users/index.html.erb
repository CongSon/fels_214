<% provide :title, t(".all_users") %>
<h1 class="head"><%= t ".all_users" %></h1>
<div class="row">
  <div class="search-form">
    <%= form_tag admin_users_path, method: :get, id: "search-form" do %>
      <div class="input-group">
        <%= text_field_tag :search, params[:search],
          placeholder: t(".search"), class: "form-control search-field" %>
        <div class="input-group-btn search-btn">
        <%= button_tag type: "submit", class: "btn btn-primary" do %>
          <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
        <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="panel-body">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="table-responsive table-condensed">
        <table class="responstable" id="list_user">
          <thead class="title_table th_word">
            <tr>
              <th><%= t ".number" %></th>
              <th><%= t ".avatar" %></th>
              <th><%= t ".name" %></th>
              <th><%= t ".email" %></th>
              <th><%= t ".delete" %></th>
            </tr>
          </thead>
          <tbody>
            <%= render @users %>
          </tbody>
        </table>
        <%= will_paginate %>
      </div>
    </div>
  </div>
</div>
