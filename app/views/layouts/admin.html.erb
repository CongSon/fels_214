<!DOCTYPE html>
<html lang="en">
<head>
    <title><%= full_title yield(:title) %></title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag "admin", "data-turbolinks-track": "reload" %>
    <%= javascript_include_tag "admin", "data-turbolinks-track": true  %>
</head>
<body class="menubar-hoverable header-fixed menubar-pin">
    <section>
        <header id="header">
            <div class="headerbar">
                <div class="headerbar-left">
                    <ul class="header-nav header-nav-options">
                        <li class="header-nav-brand">
                            <div class="brand-holder">
                                <span class="text-lg text-bold text-primary"><%= t ".e-admin"%></span>
                            </div>
                        </li>
                        <li>
                            <a class="btn btn-icon-toggle menubar-toggle" data-toggle="menubar" href="javascript:void(0);">
                                <i class="fa fa-bars"></i>
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="headerbar-right">
                    <ul class="header-nav header-nav-profile">
                        <% if logged_in? %>
                        <li class="dropdown">
                            <a href="javascript:void(0);" class="dropdown-toggle ink-reaction" data-toggle="dropdown">
                                <span class="profile-info">
                                  <small><%= t".administrator"%></small>
                                </span>
                            </a>
                            <ul class="dropdown-menu animation-dock">
                              <li><%= link_to t(".profile"), current_user %></li>
                              <li><%= link_to t(".settings"), edit_user_path(current_user) %></li>
                              <li class="divider"></li>
                              <li>
                                <%= link_to t(".log_out"), logout_path, method: :delete %>
                              </li>
                            </ul>
                        </li>
                        <% end %>
                    </ul>
                  </div>
            </div>
        </header>
        <div id="base">
            <div id="content">
                <section>
                      <% flash.each do |message_type, message| %>
                        <div class="alert alert-<%= message_type %>"><%= message %></div>
                      <% end %>
                      <%= yield %>
                    </div>
                </section>
            </div>
            <div id="menubar" class="menubar-inverse ">
                <div class="menubar-scroll-panel">
                    <ul id="main-menu" class="gui-controls">
                        <li class="gui-folder">
                             <%= link_to admin_charts_path do %>
                                <div class="gui-icon"><i class="fa fa-home"></i></div>
                                <span class="title"><%= t".home"%></span>
                             <% end %>
                        </li>
                        <li class="gui-folder">
                             <%= link_to admin_categories_path do %>
                                <div class="gui-icon"><i class="fa fa-list"></i></div>
                                <span class="title"><%= t".categories"%></span>
                            <% end %>

                        </li>
                        <li class="gui-folder">
                            <%= link_to admin_words_path do %>
                                <div class="gui-icon"><i class="fa fa-question"></i></div>
                                <span class="title"><%= t".words"%></span>
                            <% end %>
                        </li>
                        <li>
                            <%= link_to admin_users_path do %>
                                <div class="gui-icon"><i class="fa fa-users"></i></div>
                                <span class="title"><%= t".users"%></span>
                            <% end %>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
</body>
</html>

